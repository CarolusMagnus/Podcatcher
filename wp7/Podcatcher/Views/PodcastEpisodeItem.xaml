<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Podcatcher.PodcastEpisodeItem"
	d:DesignWidth="480" d:DesignHeight="800">
	<StackPanel Orientation="Horizontal" Width="480" HorizontalAlignment="Center" VerticalAlignment="Center">
		<Grid Width="316" Height="93">
			<TextBlock x:Name="EpisodeName" Margin="20,0,0,30" TextWrapping="Wrap" Text="TextBlock" Style="{StaticResource PhoneTextTitle3Style}"/>
			<StackPanel Orientation="Horizontal" d:LayoutOverrides="GridBox">
				<TextBlock x:Name="EpisodePublished" Margin="20,0,0,0" TextWrapping="Wrap" Text="TextBlock" Style="{StaticResource PhoneTextSubtleStyle}" Width="139" VerticalAlignment="Bottom"/>
				<TextBlock x:Name="EpisodeRunningTime" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Bottom" Width="135" Style="{StaticResource PhoneTextSubtleStyle}"/>
			</StackPanel>
		</Grid>
		<Button x:Name="ButtonDownload" Content="Download" HorizontalAlignment="Right" VerticalAlignment="Center"/>
	</StackPanel>
</UserControl>