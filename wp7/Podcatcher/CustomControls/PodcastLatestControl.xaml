<UserControl x:Class="Podcatcher.PodcastLatestControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Height="120" >
        <StackPanel Orientation="Horizontal" Margin="12,0,0,0" Height="120" Tap="LatestEpisodeTapped">
            <Image Source="{Binding PodcastLogo}" Height="120" Width="120" HorizontalAlignment="Left"/>
            <StackPanel Height="120">
                <TextBlock Text="{Binding EpisodeName}" TextWrapping="Wrap" Style="{StaticResource PhoneTextTitle3Style}" Margin="20,0,0,0" Width="300" FontSize="27" VerticalAlignment="Top"/>
                <TextBlock Text="{Binding EpisodePublishedString}" TextWrapping="Wrap" Margin="20,0,0,0" HorizontalAlignment="Left" Width="300" Style="{StaticResource PhoneTextSubtleStyle}" VerticalAlignment="Bottom" FontSize="24" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
