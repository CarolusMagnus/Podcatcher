<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Podcatcher.PodcastPivotItemHeader"
	d:DesignWidth="480" d:DesignHeight="800">
	<UserControl.Resources>
		<Style x:Key="PodcastPivotItemStyle" TargetType="StackPanel"/>
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot" Background="Transparent">
			<StackPanel HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="448">
				<TextBlock x:Name="PivotHeader" TextWrapping="Wrap" Style="{StaticResource PhoneTextExtraLargeStyle}" HorizontalAlignment="Left" Height="Auto" Margin="0" Width="448"/>
				<TextBlock x:Name="PivotAltLine" TextWrapping="Wrap" Style="{StaticResource PhoneTextSubtleStyle}" HorizontalAlignment="Left" Height="Auto" Width="448" Margin="0" />
			</StackPanel>
	</Grid>
</UserControl>