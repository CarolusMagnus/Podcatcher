<UserControl x:Class="Podcatcher.PodcastHistoryItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                <Image Source="{Binding PodcastSubscription.PodcastLogo}" Height="120" Width="120" HorizontalAlignment="Left"/>
                <StackPanel Height="119" Margin="18,0,0,0" Width="325">
                    <TextBlock Text="{Binding EpisodeName}" TextWrapping="Wrap" Height="118" Style="{StaticResource PhoneTextLargeStyle}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
