<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Podcatcher.PodcastItem"
	d:DesignWidth="480" d:DesignHeight="800">

	<StackPanel Orientation="Horizontal" >
        <Image Source="{Binding PodcastLogoUrl}" Height="100" Width="100" VerticalAlignment="Center" Margin="0,0,10,0"/> 
		<TextBlock Text="{Binding PodcastName}" TextWrapping="Wrap"  Style="{StaticResource PhoneTextGroupHeaderStyle}" HorizontalAlignment="Center" Margin="0" Width="374" VerticalAlignment="Center"/>
	</StackPanel>
</UserControl>